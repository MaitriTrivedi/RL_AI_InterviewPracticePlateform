{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Interview Question Dataset",
    "type": "array",
    "items": {
        "type": "object",
        "required": ["id", "question", "topic", "difficulty", "expected_time_minutes", "historical_performance"],
        "properties": {
            "id": {
                "type": "string",
                "description": "Unique identifier for the question"
            },
            "question": {
                "type": "string",
                "description": "The actual question text"
            },
            "topic": {
                "type": "string",
                "enum": [
                    "data_structures",
                    "algorithms",
                    "system_design",
                    "programming_concepts",
                    "machine_learning",
                    "deep_learning",
                    "operating_systems",
                    "databases",
                    "computer_networks",
                    "software_engineering",
                    "distributed_systems",
                    "security"
                ]
            },
            "difficulty": {
                "type": "integer",
                "minimum": 1,
                "maximum": 10,
                "description": "Difficulty level from 1 (easiest) to 10 (hardest)"
            },
            "expected_time_minutes": {
                "type": "number",
                "minimum": 0,
                "description": "Expected time to solve in minutes"
            },
            "historical_performance": {
                "type": "object",
                "properties": {
                    "attempts": {
                        "type": "integer",
                        "minimum": 0,
                        "description": "Number of times this question was attempted"
                    },
                    "avg_score": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 1,
                        "description": "Average score achieved by candidates"
                    },
                    "avg_time_minutes": {
                        "type": "number",
                        "minimum": 0,
                        "description": "Average time taken by candidates"
                    }
                },
                "required": ["attempts", "avg_score", "avg_time_minutes"]
            },
            "sample_solution": {
                "type": "string",
                "description": "Reference solution for the question"
            },
            "tags": {
                "type": "array",
                "items": {
                    "type": "string"
                },
                "description": "Additional tags for better categorization"
            }
        }
    }
} 